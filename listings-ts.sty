  keywords={break,case,class,catch,const,continue,debugger,default,delete,do,else,enum,export,extends,false,finally,for,function,if,import,in,instanceof,interface,let,new,null,return,super,switch,this,throw,true,try,typeof,var,void,while,with,yield,declare,abstract,as,asserts,any,readonly,private,protected,public,static,get,set,never,async,await,unknown,type,from},
